---
import Layout from "@layouts/Layout.astro";
import Container from "@components/Container.astro";
import { SITE, HOME, SOCIALS } from "@consts";
import ArrowCard from "@components/ArrowCard.astro";
import Link from "@components/Link.astro";
import { getCollection } from "astro:content";
import type { CollectionEntry } from "astro:content";
import PostRow from "@components/PostRow.astro";

const blog = (await getCollection("blog"))
  .filter((post) => !post.data.draft)
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf())
  .slice(0, SITE.NUM_POSTS_ON_HOMEPAGE);

const projects: CollectionEntry<"projects">[] = (await getCollection("projects"))
    .filter((project) => !project.data.draft)
    .sort((a, b) => {
      const priorityA = a.data.priority ?? -1
      const priorityB = b.data.priority ?? -1
      if (priorityA !== priorityB) {
        return priorityA - priorityB;
      }

      if (a.data.date && b.data.date) {
        return b.data.date.valueOf() - a.data.date.valueOf();
      }
      return 0;
    })
---

<Layout title={HOME.TITLE} description={HOME.DESCRIPTION}>
  <Container>
    <div class="space-y-16">
      <section>
        <article class="space-y-4">
          <span class="animate">
            <p>ðŸ‘‹ Hi, I'm Neal. I'm an SF-based software developer. Most recently I was a Staff Software Engineer at <a href="https://discord.com">Discord</a> working on AI products and developer tools. I enjoy working on small teams with a focused mission and hard technical problems.</p>
          </span>
          <span class="animate">
            <p>
              My writing here will focus on technology and engineering, but I also write about basketball and the NBA on Substack at <Link href="https://baselinecut.substack.com/">The Baseline Cut</Link>.
            </p> 
          </span>
        </article>
      </section>

      <section class="animate space-y-6">
        <div class="flex flex-wrap items-center justify-between gap-y-2">
          <h2 class="font-semibold text-black dark:text-white">
            Projects
          </h2>
          <!-- <Link href="/projects"> See all projects </Link> -->
        </div>
        <ul class="not-prose flex flex-col gap-4">
          {
            projects.map((project) => (
              <li>
                <ArrowCard entry={project} />
              </li>
            ))
          }
        </ul>
      </section>

      { blog.length > 0 && (
      <section class="animate space-y-6">
        <div class="flex flex-wrap items-center justify-between gap-y-2">
          <h2 class="font-semibold text-black dark:text-white">Posts</h2>
          <!-- <Link href="/blog"> See all posts </Link> -->
        </div>
        <ul class="not-prose flex flex-col gap-4">
          {
            blog.map((post) => (
              <li>
                <PostRow entry={post} />
              </li>
            ))
          }
        </ul>
      </section>
      )}
    </div>
  </Container>
</Layout>
